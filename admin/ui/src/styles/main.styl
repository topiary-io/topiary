@import 'jeet'
@import "./loader"
@import "./edit"

header-height = 5rem

*
  box-sizing border-box

html
  font-size 62.5%

body
  margin 0
  font-size 1.5rem
  background-color #fff

header
  position fixed
  left 0
  top 0
  width 100vw
  height header-height 
  background-color #f0f0f0
  border-bottom .1rem solid #e5e5e5

  #admin-home
    color #272
    text-decoration none
    font-weight bold
    font-family sans-serif
    margin-left 1.5rem
    font-size 3rem
    line-height 5rem 
nav
  position fixed
  top 5rem
  left 0
  bottom 0
  width: 25rem
  overflow-y auto
  background-color #fafafa
  border-right .1rem solid #e5e5e5
  padding-bottom 3rem

  h2
    color #777
    text-transform uppercase
    font-size 1.7rem
    line-height 3rem
    padding 0 1.5rem
    margin 0

  ul
    list-style none
    padding 0
    margin 0

    a, span
      display block
      font-size 1.7rem
      line-height 2.5rem
      padding 0 1.5rem

    a
      transition 0.5s
      color #494
      text-decoration none

      &:hover
        background-color #f5f5f5
        color #4d4

    span
      background-color #eee

.push-right
  padding-left 25rem

main
  padding header-height 1.5rem 0
  margin-bottom 3rem

footer
  padding 0 1.5rem
