@import "jeet"

base-color = #000
loader-color-1 = alpha(base-color, .5)
loader-color-2 = alpha(base-color, .1)
thickness = .7rem
diameter = 4rem

.loader
  overflow hidden
  margin 6rem auto
  font-size 1rem
  position relative
  text-indent -9999em
  border-top thickness solid loader-color-2
  border-right thickness solid loader-color-2
  border-bottom thickness solid loader-color-2
  border-left thickness solid loader-color-1
  -webkit-transform translateZ(0)
  -ms-transform translateZ(0)
  transform translateZ(0)
  -webkit-animation spinner 1.1s infinite linear
  animation spinner 1.1s infinite linear

.loader,
.loader:after
  border-radius 50%
  width diameter
  height diameter

@-webkit-keyframes spinner
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)
  
  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)
  

@keyframes spinner
  0%
    -webkit-transform rotate(0deg)
    transform rotate(0deg)
  
  100%
    -webkit-transform rotate(360deg)
    transform rotate(360deg)
  


